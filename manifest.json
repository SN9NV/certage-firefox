{
	"manifest_version": 2,
	"name": "Certage",
	"version": "1.0.0",
	"description": "Show the remaining days/hours for the SSL certificate for any web page.",
        "browser_action": {
          "default_icon": {
            "48": "icons/48_green.png"
          }
        },
	"icons": {
		"48": "icons/48_green.png"
	},
	"permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
	"background": {
		"scripts": ["background.js"]
	}
}
